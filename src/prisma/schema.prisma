generator client {
  provider        = "prisma-client-js"
  // previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL")
  // extensions = [uuid_ossp(map: "uuid-ossp", schema: "extensions")]
}

model Client {
  id                  Int                   @id @default(autoincrement())
  client_id           String                @unique
  client_name         String
  event_date          DateTime
  createdAt           DateTime              @default(now())
  updatedAt           DateTime?             @updatedAt
  createdBy           String
  updatedBy           String
  event_name          String
  event_type          String
  event_title         String?
  BroadcastTemplate   BroadcastTemplate[]
  image               ClientImage[]
  ClientVideo         ClientVideo[]
  guest               Guest[]
  Invitations         Invitations[]
  QrBroadcastTemplate QrBroadcastTemplate[]
  QrFile              QrFile[]
  QrGalleryImage      QrGalleryImage[]
  QrGuest             QrGuest[]
  Question            Question[]
  Scenario            Scenario[]
  Webhook             Webhook[]
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String
  updatedBy String
}

model LogTestMessage {
  id              Int               @id @default(autoincrement())
  phoneNumber     String
  eventName       String
  senderName      String
  invitationLink  String
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  clientId        String
  clientName      String
  LogTestQuestion LogTestQuestion[]
}

model LogTestQuestion {
  id               Int            @id @default(autoincrement())
  question         String
  answer           String?
  idLogTestMessage Int
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  type             String
  flag             String?
  position         Int?
  guest            LogTestMessage @relation(fields: [idLogTestMessage], references: [id])
}

model ClientImage {
  id                Int      @id @default(autoincrement())
  clientId          Int
  imageName         String
  imagePath         String
  imageOriginalPath String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  flag              String
  Client            Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model ClientVideo {
  id        Int      @id @default(autoincrement())
  clientId  Int
  flag      String
  video     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model Guest {
  id               Int                @id @default(autoincrement())
  guestId          String
  name             String
  scenario         String
  clientId         Int
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  scenario_slug    String?
  client           Client             @relation(fields: [clientId], references: [id], onDelete: Cascade)
  GuestDetail      GuestDetail[]
  Invitations      Invitations[]
  SendBlastingLogs SendBlastingLogs[]
  Webhook          Webhook[]
}

model GuestDetail {
  id         Int      @id @default(autoincrement())
  guestId    Int
  detail_key String
  detail_val String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  guest      Guest    @relation(fields: [guestId], references: [id], onDelete: Cascade)
}

model Question {
  id               Int                @id @default(autoincrement())
  question         String
  type             String
  client_id        Int
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  position         Int
  Invitations      Invitations[]
  Client           Client             @relation(fields: [client_id], references: [id], onDelete: Cascade)
  ScenarioQuestion ScenarioQuestion[]
}

model BroadcastTemplate {
  id                        Int                         @id @default(autoincrement())
  template_name             String
  client_id                 Int
  createdAt                 DateTime                    @default(now())
  updatedAt                 DateTime                    @updatedAt
  template_type             String?
  Client                    Client                      @relation(fields: [client_id], references: [id], onDelete: Cascade)
  ScenarioBroadcastTemplate ScenarioBroadcastTemplate[]
}

model Scenario {
  id                        Int                         @id @default(autoincrement())
  scenario_name             String
  client_id                 Int
  createdAt                 DateTime                    @default(now())
  updatedAt                 DateTime                    @updatedAt
  scenario_slug             String?
  Client                    Client                      @relation(fields: [client_id], references: [id], onDelete: Cascade)
  ScenarioBroadcastTemplate ScenarioBroadcastTemplate[]
  ScenarioQuestion          ScenarioQuestion[]
}

model ScenarioQuestion {
  id                Int      @id @default(autoincrement())
  scenario_question String
  question_id       Int
  scenario_id       Int
  status            Boolean
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  Question          Question @relation(fields: [question_id], references: [id], onDelete: Cascade)
  Scenario          Scenario @relation(fields: [scenario_id], references: [id], onDelete: Cascade)
}

model ScenarioBroadcastTemplate {
  id                          Int               @id @default(autoincrement())
  broadcast_template_scenario String
  broadcast_template_id       Int
  scenario_id                 Int
  status                      Boolean
  createdAt                   DateTime          @default(now())
  updatedAt                   DateTime          @updatedAt
  BroadcastTemplate           BroadcastTemplate @relation(fields: [broadcast_template_id], references: [id], onDelete: Cascade)
  Scenario                    Scenario          @relation(fields: [scenario_id], references: [id], onDelete: Cascade)
}

model Invitations {
  id         Int      @id @default(autoincrement())
  clientId   Int
  guestId    Int
  questionId Int
  answer     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  token      String?
  Client     Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  Guest      Guest    @relation(fields: [guestId], references: [id], onDelete: Cascade)
  Question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model SendBlastingLogs {
  id        Int      @id @default(autoincrement())
  status    String
  logs      String
  guestId   Int
  createdAt DateTime @default(now())
  Guest     Guest    @relation(fields: [guestId], references: [id], onDelete: Cascade)
}

model QrGalleryImage {
  id           Int      @id @default(autoincrement())
  name         String
  path         String
  originalPath String
  clientId     Int
  createdAt    DateTime @default(now())
  Client       Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model QrFile {
  id           Int      @id @default(autoincrement())
  name         String
  code         String
  path         String
  originalPath String
  clientId     Int
  createdAt    DateTime @default(now())
  Client       Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model QrGuest {
  id              Int               @id @default(autoincrement())
  name            String
  phoneNumber     String
  qr_code         String
  clientId        Int
  createdAt       DateTime          @default(now())
  QrBroadcastLogs QrBroadcastLogs[]
  Client          Client            @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model QrBroadcastTemplate {
  id        Int      @id @default(autoincrement())
  name      String
  clientId  Int
  createdAt DateTime @default(now())
  type      String?
  Client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model QrBroadcastLogs {
  id        Int      @id @default(autoincrement())
  QrGuestId Int
  status    String
  createdAt DateTime @default(now())
  QrGuest   QrGuest  @relation(fields: [QrGuestId], references: [id], onDelete: Cascade)
}

model Webhook {
  id               Int       @id @default(autoincrement())
  guestId          Int
  templateName     String?
  waId             String?
  recipientId      String?
  status           String?
  lastUpdateStatus DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  clientId         Int
  statusCode       String?
  Client           Client    @relation(fields: [clientId], references: [id])
  Guest            Guest     @relation(fields: [guestId], references: [id])
}
